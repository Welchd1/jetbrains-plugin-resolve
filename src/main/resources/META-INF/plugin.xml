<idea-plugin>
    <id>edu.clemson.resolve</id>
    <name>RESOLVE</name>
    <version>0.1.2a</version>
    <vendor email="dtw.welch@gmail.com" url="https://github.com/Welchd1/jetbrains-plugin-resolve">Clemson RSRG</vendor>

    <description><![CDATA[
        Provides support for the RESOLVE specification and programming language.
    ]]></description>

    <change-notes><![CDATA[
        Initial commit; filetypes, icons, templates, and other
        foundational stuff.
        ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="193"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <!--<depends optional="true" config-file="java-deps.xml">com.intellij.modules.java</depends>-->


    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <internalFileTemplate name="RESOLVE File"/>

        <!-- project -->
        <moduleType id="RESOLVE_MODULE" implementationClass="edu.clemson.resolve.ResolveModuleType"/>
        <!--<editorNotificationProvider implementation="edu.clemson.resolve.inspections.WrongModuleTypeNotificationProvider"/>-->
        <sdkType implementation="edu.clemson.resolve.sdk.ResolveSdkType"/>
        <applicationService serviceImplementation="edu.clemson.resolve.project.ResolveLibrariesPathModificationTracker"/>
        <projectService serviceImplementation="edu.clemson.resolve.sdk.ResolveSdkType$ResolveSdkService"
                        overrides="false"/>
        <library.presentationProvider implementation="edu.clemson.resolve.sdk.ResolveSdkPresentationProvider"/>

        <applicationService serviceImplementation="edu.clemson.resolve.project.RESOLVEApplicationLibrariesService"/>
        <projectService serviceImplementation="edu.clemson.resolve.project.ResolveLibrariesService$ResolveProjectLibraryService"/>
        <moduleService serviceImplementation="edu.clemson.resolve.project.ResolveLibrariesService$ResolveModuleLibrariesService"/>

        <fileType name="RESOLVE" implementationClass="edu.clemson.resolve.ResolveLanguage$ResolveFileType" fieldName="INSTANCE"
                  language="RESOLVE" extensions="resolve"/>


    </extensions>
    <module-components>
        <component>
            <implementation-class>edu.clemson.resolve.project.ResolveLibrariesInitializer</implementation-class>
        </component>
    </module-components>
    <actions>
        <action id="resolve.NewRESOLVEFile" class="edu.clemson.resolve.actions.ResolveCreateFileAction"
                text="RESOLVE File" description="Create a new RESOLVE file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>